{% macro passwordFieldWithToggle(name, value, label = '', options = {}) %}
    {% set options = {'rand': random()}|merge(options) %}
    {% set id = options.id|default('passwordfield' ~ options.rand) %}
    
    <div class="form-field row col-12 col-sm-6  mb-2">
        <label class="col-form-label col-xxl-5 text-xxl-end" for="{{ id }}">
            {{ label }}
        </label>
        <div class="col-xxl-7  field-container" style="position: relative;">
            <input type="password" id="{{ id }}" name="{{ name }}" value="{{ value }}" class="form-control">
            <button type="button" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer;" onclick="toggleWazuhPassword('{{ id }}')">
                <i class="ti ti-eye"></i>
            </button>
        </div>
    </div>
    
    <script>
{#  toggleWazuhPassword(id) function in js/wazuh.js file  #}
    </script>
{% endmacro %}